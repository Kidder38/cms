{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node heroku-startup.js && node server.js",
    "dev": "nodemon server.js",
    "postinstall": "npm run check-env",
    "check-env": "node -e \"const fs = require('fs'); !fs.existsSync('.env') && fs.existsSync('.env.example') && fs.copyFileSync('.env.example', '.env'); console.log('Environment check complete');\"",
    "db:init": "node heroku-startup.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.14.1",
    "pg-copy-streams": "^6.0.6",
    "winston": "^3.10.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
